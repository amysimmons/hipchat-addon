{
  "key": "my-add-on",
  "name": "Hello!",
  "description": "My very first HipChat add-on",
  "vendor": {
    "name": "Angry Nerds",
    "url": "https://www.hipchat.com"
  },
  "links": {
    "self": "{{localBaseUrl}}/atlassian-connect.json",
    "homepage": "{{localBaseUrl}}"
  },
  "capabilities": {
    "hipchatApiConsumer": {
      "scopes": [
        "send_notification",
        "view_room"
      ],
      "avatar": {
        "url": "{{localBaseUrl}}/img/logo.png",
        "url@2x": "{{localBaseUrl}}/img/logo.png"
      }
    },
    "installable": {
      "callbackUrl": "{{localBaseUrl}}/installable"
    },
    "configurable": {
      "url": "{{localBaseUrl}}/config"
    },
    "webhook": [
      {
        "url": "{{localBaseUrl}}/webhook",
        "pattern": "^/retro",
        "event": "room_message",
        "name": "Retro",
        "authentication": "jwt"
      }
    ],
    "glance": [
      {
        "name": {
          "value": "Hello!"
        },
        "queryUrl": "{{localBaseUrl}}/glance",
        "key": "sample.glance",
        "target": "sample.sidebar",
        "icon": {
          "url": "{{localBaseUrl}}/img/logo.png",
          "url@2x": "{{localBaseUrl}}/img/logo.png"
        }
      }
    ],
    "webPanel": [
      {
        "key": "sample.sidebar",
        "name": {
          "value": "Hello Sidebar!"
        },
        "location": "hipchat.sidebar.right",
        "url": "{{localBaseUrl}}/sidebar"
      }
    ],
    "dialog": [
      {
        "key": "sample.dialog",
        "title": {
          "value": "Hello Dialog!"
        },
        "url": "{{localBaseUrl}}/dialog",
        "options": {
          "style": "normal",
          "primaryAction": {
            "name": {
              "value": "Say Hello!"
            },
            "key": "sample.dialog.action",
            "enabled": true
          },
          "size": {
            "width": "400px",
            "height": "200px"
          }
        }
      },
      {
        "key": "delete-all.dialog",
        "title": {
          "value": "Delete all"
        },
        "url": "{{localBaseUrl}}/dialog/delete-all",
        "options": {
          "style": "normal",
          "primaryAction": {
            "name": {
              "value": "Yes"
            },
            "key": "delete-all.yes",
            "enabled": true
          },
          "secondaryActions": [{
            "name": {
              "value": "Cancel"
            },
            "key": "delete-all.cancel",
            "enabled": true
          }],
          "size": {
            "width": "400px",
            "height": "200px"
          }
        }
      },
      {
        "key": "delete.dialog",
        "title": {
          "value": "Delete"
        },
        "url": "{{localBaseUrl}}/dialog/delete",
        "options": {
          "style": "normal",
          "primaryAction": {
            "name": {
              "value": "Yes"
            },
            "key": "delete.yes",
            "enabled": true
          },
          "secondaryActions": [{
            "name": {
              "value": "Cancel"
            },
            "key": "delete.cancel",
            "enabled": true
          }],
          "size": {
            "width": "400px",
            "height": "200px"
          }
        }
      },
      {
        "key": "edit.dialog",
        "title": {
          "value": "Edit"
        },
        "url": "{{localBaseUrl}}/dialog/edit",
        "options": {
          "style": "normal",
          "primaryAction": {
            "name": {
              "value": "Save"
            },
            "key": "edit.save",
            "enabled": true
          },
          "secondaryActions": [{
            "name": {
              "value": "Cancel"
            },
            "key": "edit.cancel",
            "enabled": true
          }],
          "size": {
            "width": "400px",
            "height": "200px"
          }
        }
      }
    ],
    "action": [
      {
        "key": "sample.action",
        "name": {
          "value": "Open Hello Dialog!"
        },
        "target": "sample.dialog",
        "location": "hipchat.input.action"
      }
    ]
  }
}
